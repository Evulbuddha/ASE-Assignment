<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" >
    </EditText>

    <EditText
        android:id="@+id/emailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passwordView"
        android:layout_alignLeft="@+id/passwordView"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName" />

    <requestFocus />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordView"
        android:layout_below="@+id/passwordView"
        android:layout_marginTop="82dp"
        android:text="Register" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRegister"
        android:layout_alignBottom="@+id/buttonRegister"
        android:layout_alignRight="@+id/passwordView"
        android:text="Login" />

    <CheckBox
        android:id="@+id/checkBoxRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordView"
        android:layout_below="@+id/passwordView"
        android:text="Remember Me" />

</RelativeLayout>
