<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/register_displayNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Display Name" />

    <Button
        android:id="@+id/register_registerButton"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/register_displayNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="Register" />

    <EditText
        android:id="@+id/register_passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_displayNameText"
        android:layout_alignLeft="@+id/register_displayNameText"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"/>

    <EditText
        android:id="@+id/register_emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_passwordText"
        android:layout_alignLeft="@+id/register_passwordText"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="textEmailAddress|textPersonName"
        android:hint="Email Address" >

        <requestFocus />
        
    </EditText>

</RelativeLayout>
